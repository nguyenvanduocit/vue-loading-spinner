{
  "name": "vue-loading-spinner",
  "version": "2.0.0",
  "description": "Loading spinner collection for Vue 3",
  "type": "module",
  "main": "./dist/vue-loading-spinner.umd.cjs",
  "module": "./dist/vue-loading-spinner.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-loading-spinner.js",
      "require": "./dist/vue-loading-spinner.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "playwright test",
    "test:all": "vitest run && playwright test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nguyenvanduocit/vue-loading-spinner.git"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vue/test-utils": "^2.4.0",
    "happy-dom": "^17.0.0",
    "sass": "^1.83.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^3.0.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.2.0"
  }
}
